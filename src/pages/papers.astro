---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const allPosts = await Astro.glob('/src/pages/posts/*.md');
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
});

const title = `Papers - DJOUPE PENE Audrey`;
const description = 'Discover my research papers and technical articles';
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-gray-900 pt-20">
    <div class="max-w-6xl mx-auto px-8 py-16">
      <h1 class="text-4xl font-bold text-white mb-12">Research Papers</h1>
      
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex gap-6">
              {post.frontmatter.imgSrc && (
                <div class="flex-shrink-0">
                  <img
                    src={post.frontmatter.imgSrc}
                    alt={post.frontmatter.imgAlt || ''}
                    class="w-32 h-32 object-cover rounded-lg"
                  />
                </div>
              )}
              <div class="flex-grow">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{post.frontmatter.title}</h3>
                <p class="text-gray-700 mb-4">{post.frontmatter.description}</p>
                <div class="flex justify-between items-center">
                  <span class="text-purple-600">
                    {new Date(post.frontmatter.pubDate).toLocaleDateString('fr-FR', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </span>
                  <a
                    href={post.url}
                    class="inline-block bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors"
                  >
                    Read Paper
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    <Footer />
  </main>
</Layout> 